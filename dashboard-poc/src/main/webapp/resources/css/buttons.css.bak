.btn-group {
	display: inline-block;
	position: relative;
	vertical-align: middle;
	white-space: nowrap;
}
.btn-group > .btn:first-child {
	border-bottom-left-radius: 4px;
	border-top-left-radius: 4px;
	margin-left: 0;
}
.btn-group > .btn {
	border-radius: 0 0 0 0;
	position: relative;
}
.btn-group > .btn:last-child, .btn-group > .dropdown-toggle {
	border-bottom-right-radius: 4px;
	border-top-right-radius: 4px;
}
.btn-group > .btn + .btn {
	margin-left: -5px;
	border-left: 1px solid white;
}
a.btn, a.btn:link, a.btn:visited{
	color: #FFFFFF;
}
.btn{
	background-color: #666666;
	color: #FFFFFF;
	text-decoration: none;
	cursor: pointer;
	margin-top: 10px;
	border-radius: 4px;
	line-height: 20px;
	padding: 6px 10px;
	display: inline-block;
	vertical-align: middle;
	text-align: center;
	white-space: nowrap;
}
.btn + .btn, .btn-group + .btn, .btn + .btn-group, .btn-group + .btn-group{
	margin-left: 10px;
}
.btn i{
	margin-right: 9px;
}
.btn i.align-right{
	margin-right: 0;
	margin-left: 9px;
}
.btn-small {
	font-size: 0.875em;
	line-height: 18px;
	padding: 5px 9px;
}
.btn-large {
	font-size: 1.125em;
	line-height: 22px;
	border-radius: 5px;
	padding: 7px 11px;
}
.btn:hover{
	text-decoration: none;
}
.btn:focus, .btn:hover{
	background-color: #808080;
}
.btn:active{
	background-color: #4C4C4C;
}
.btn-primary {
	background-color: #086C90;
}
.btn-primary:focus, .btn-primary:hover{
	background-color: #2789AD;
}
.btn-primary:active{
	background-color: #075E7D;
}
.btn-warning {
	background-color: #DB643D;
}
.btn-warning:focus, .btn-warning:hover{
	background-color: #F17E59;
}
.btn-warning:active{
	background-color: #C74F28;
}